<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.1;net472</TargetFrameworks>
    <DebugType>embedded</DebugType>

    <PackageId>Evaisa.NetcodePatcher.MSBuild</PackageId>
    <Description>MSBuild integration for NetcodePatcher</Description>

    <IsPackable>true</IsPackable>
    <DevelopmentDependency>true</DevelopmentDependency>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
    <NoPackageAnalysis>true</NoPackageAnalysis>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>
  
  <!-- Development dependencies -->
  <ItemGroup>
    
  </ItemGroup>
  
  <!-- Runtime dependencies -->
  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="17.*"/>
  </ItemGroup>

  <!-- Project dependencies -->
  <ItemGroup>
    <ProjectReference Include="$(ProjectDir)../NetcodePatcher/NetcodePatcher.csproj"/>
  </ItemGroup>
  <ItemGroup Condition="$(Configuration) == 'Release'">
    <PackageReference Include="Evaisa.NetcodePatcher"/>
  </ItemGroup>
</Project>